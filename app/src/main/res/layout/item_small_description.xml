<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <ImageView
        android:id="@+id/iv_image_model"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_iphonexc"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_name_model"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Apple iPhone X"
        android:textColor="@color/purple_700"
        android:textSize="27sp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/iv_image_model"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_description_model"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="iOS,ecran tactil 5.5, GPS, 256 GB, 12mpx"
        android:textSize="16sp"

        app:layout_constraintStart_toEndOf="@id/iv_image_model"
        app:layout_constraintTop_toBottomOf="@id/tv_name_model"
        />

    <TextView
        android:id="@+id/tv_dolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="$"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/blue"

        app:layout_constraintStart_toEndOf="@+id/iv_image_model"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_model"
        />

    <TextView
        android:id="@+id/tv_price_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="980,-"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/blue"

        app:layout_constraintStart_toEndOf="@id/tv_dolar"
        app:layout_constraintTop_toBottomOf="@id/tv_description_model"
        />

    <ImageView
        android:id="@+id/iv_isChecked_model"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_heart2"

        app:layout_constraintStart_toEndOf="@+id/iv_image_model"
        app:layout_constraintTop_toBottomOf="@+id/tv_dolar"
        />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_margin="10dp"

        app:layout_constraintTop_toBottomOf="@id/iv_isChecked_model"
        />

</androidx.constraintlayout.widget.ConstraintLayout>